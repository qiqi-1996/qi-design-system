{
    "$schema": "./dist/schema-zh.json",
    "output": [
        { "type": "tailwind-v4", "path": "./src-docs/theme.css" },
        { "type": "mantine", "path": "./src-docs/theme.ts" }
    ],
    "space": { "base": 8, "unit": "px" },
    "color": {
        "palettes": [
            { "type": "qi-design-system-v0", "name": "brand", "base": "#002FA7" },
            { "type": "qi-design-system-v0", "name": "danger", "base": "#F40000" }
        ],
        "semantic": {
            "primary": { "default": { "type": "chakra", "solid": "brand-600" } },
            "border": { "default": { "type": "custom", "default": "#E7E7E7" } },
            "color-footnote": { "default": { "type": "custom", "default": "#9E9E9E" } },
            "secondary-background": { "default": { "type": "custom", "default": "#FAFAFA" } },
            "danger": { "default": { "type": "chakra", "solid": "danger-600" } }
        }
    },
    "font": {
        "size": {
            "semantic": { "footnote": "12px", "text": "14px", "subtitle": "16px", "title": "24px", "headline": "40px" }
        },
        "lineHeight": { "auto": { "value": 4, "range": [0, 3] } },
        "weight": {
            "semantic": { "footnote": "400", "text": "400", "subtitle": "500", "title": "600", "headline": "800" }
        }
    }
}
